<?xml version="1.0" encoding="UTF-8"?><plug-in>
    <name>releaser</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.1.1-SNAPSHOT</version>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <description>releaser.plugin.description</description>
    <provider>releaser.plugin.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2017 City of Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>RELEASER_MANAGEMENT</feature-id>
            <feature-title>releaser.adminFeature.ManageReleaser.name</feature-title>
            <feature-description>releaser.adminFeature.ManageReleaser.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/plugins/releaser/ManageClusters.jsp</feature-url>
            <feature-icon-url/>
      </admin-feature>
    </admin-features>
    
    <!-- RBAC Resources -->    
    <rbac-resource-types>
		<rbac-resource-type>
			<rbac-resource-type-class>
				fr.paris.lutece.plugins.releaser.service.SiteResourceIdService
			</rbac-resource-type-class>
		</rbac-resource-type>
		<rbac-resource-type>
			<rbac-resource-type-class>
				fr.paris.lutece.plugins.releaser.service.ClusterResourceIdService
			</rbac-resource-type-class>
		</rbac-resource-type>
		<rbac-resource-type>
			<rbac-resource-type-class>
				fr.paris.lutece.plugins.releaser.service.ComponentResourceIdService
			</rbac-resource-type-class>
		</rbac-resource-type>
	</rbac-resource-types>   	
	
    <!-- Admin css -->
     <admin-css-stylesheets>
        <admin-css-stylesheet>css/admin/AdminLTEv2.css</admin-css-stylesheet>
        <admin-css-stylesheet>css/plugins/releaser/butns.min.css</admin-css-stylesheet>
<!--         <admin-css-stylesheet>css/plugins/releaser/portal_admin_deploy.css</admin-css-stylesheet> -->
    </admin-css-stylesheets>    

    <!-- XPages parameters -->
    <applications>
    </applications>

    <!-- Portlet parameters -->
    <portlets>
   </portlets>
</plug-in>